{
    "env": {
        "es6": true,
        "node": true
    },
    "root": true,
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            2,
            { "ArrayExpression": "first" }
        ],
        "key-spacing": [
            1,
            { "align": {
                "beforeColon": true,
                "afterColon": true,
                "on": "colon",
                "mode": "strict"
                }
            }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "never"
        ]
    }
}